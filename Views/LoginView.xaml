<UserControl x:Class="RestaurantApp.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1024">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/tasty-pizza-near-ingredients.jpg" Stretch="UniformToFill" Opacity="0.85"/>
        </Grid.Background>

        <Border Width="450" 
                Background="#FFFFFF" 
                CornerRadius="15" 
                Padding="40" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Effect="{StaticResource ShadowEffect}">
            

            <StackPanel>
                <Image Source="/Assets/3903248.jpg" Height="90" Margin="0,0,0,25"/>

                <TextBlock Text="Bine ați revenit!" 
                           FontSize="28" 
                           FontWeight="SemiBold" 
                           Foreground="#23395d"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,15"/>

                <TextBlock Text="Autentificați-vă pentru a continua" 
                           FontSize="16" 
                           Foreground="#666666" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <Border Background="#FFEBEE" 
                        CornerRadius="6" 
                        Padding="15,12" 
                        Margin="0,0,0,20"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#D32F2F" 
                               TextWrapping="Wrap"
                               FontSize="14"/>
                </Border>

                <TextBlock Text="Email" 
                           FontWeight="Medium" 
                           Foreground="#23395d" 
                           Margin="0,0,0,8"/>
                <Border Background="#F5F7FA" 
                        CornerRadius="8" 
                        BorderBrush="#E1E5EA" 
                        BorderThickness="1" 
                        Margin="0,0,0,20">
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource StandardTextBox}"
                             Background="Transparent"
                             BorderThickness="0"
                             FontSize="15"
                           />
                </Border>

                <TextBlock Text="Parolă" 
                           FontWeight="Medium" 
                           Foreground="#23395d" 
                           Margin="0,0,0,8"/>
                <Border Background="#F5F7FA" 
                        CornerRadius="8" 
                        BorderBrush="#E1E5EA" 
                        BorderThickness="1" 
                        Margin="0,0,0,25">
                    <PasswordBox x:Name="PasswordBox" 
                             Style="{StaticResource StandardPasswordBox}"
                             Background="Transparent"
                             BorderThickness="0"
                             FontSize="15"
                            />
                </Border>

                <Button Content="Autentificare" 
                        Command="{Binding LoginCommand}" 
                        Style="{StaticResource PrimaryButton}"
                        Background="#FF5722"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Height="50" 
                        Margin="0,10,0,15"
                        BorderThickness="0"
                       >
                    <Button.CommandParameter>
                        <Binding ElementName="PasswordBox" Path="Password"/>
                    </Button.CommandParameter>
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#22000000" ShadowDepth="1" Opacity="0.3"/>
                    </Button.Effect>
                </Button>

                <ProgressBar IsIndeterminate="True" 
                             Height="4" 
                             Margin="0,0,0,20" 
                             Foreground="#FF5722"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0" FontSize="15">
                    <Run Text="Nu aveți cont?" Foreground="#666666"/>
                    <Hyperlink Command="{Binding RegisterCommand}" TextDecorations="None" Foreground="#FF5722">
                        <Run Text="Înregistrare" FontWeight="SemiBold"/>
                    </Hyperlink>
                </TextBlock>

                <!-- Back Button -->
                <Button Content="Înapoi la ecranul principal" 
                        Command="{Binding BackCommand}" 
                        Style="{StaticResource TextButton}" 
                        Foreground="#666666"
                        FontSize="14"
                        Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <connectionStrings>
        <add name="RestaurantDbConnection" 
             connectionString="Data Source=.;Initial Catalog=RestaurantDbConnection;Integrated Security=True;TrustServerCertificate=True" 
             providerName="Microsoft.Data.SqlClient" />
    </connectionStrings>
    <appSettings>
        <add key="MenuDiscountPercent" value="10" />
        <add key="OrderDiscountThreshold" value="200" />
        <add key="OrderDiscountPercent" value="15" />
        <add key="MinOrdersForDiscount" value="5" />
        <add key="OrdersDiscountTimeframeInDays" value="30" />
        <add key="FreeDeliveryThreshold" value="100" />
        <add key="DeliveryFee" value="15" />
        <add key="LowStockThreshold" value="10" />
    </appSettings>
</configuration>
